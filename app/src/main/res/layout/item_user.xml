<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="168dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mfg_text_view"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Product" />

    <TextView
        android:id="@+id/bbe_text"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:background="#1CD4B9"
        android:gravity="center"
        android:text="BBE"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/mfg_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/exp_text_view"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="EXP"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mfg_text_view"
        app:layout_constraintTop_toBottomOf="@+id/mfg_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mfg_text_view"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:background="#FFEB3B"
        android:gravity="center|center_horizontal"
        android:text="MFG"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/exp_text_view"
        app:layout_constraintEnd_toEndOf="@+id/bbe_text"
        app:layout_constraintStart_toStartOf="@+id/bbe_text"
        app:layout_constraintTop_toBottomOf="@+id/bbe_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="BBE"
        android:textColor="#1CD4B9"
        app:layout_constraintEnd_toStartOf="@+id/bbe_text"
        app:layout_constraintTop_toTopOf="@+id/bbe_text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="36dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:text="MFG"
        android:textColor="#FEE92E"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/bbe_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Exp"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toStartOf="@+id/mfg_text_view"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>